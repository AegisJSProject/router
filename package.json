{
  "name": "@aegisjsproject/router",
  "version": "1.0.0",
  "description": "A simple but powerful router module",
  "keywords": [],
  "type": "module",
  "main": "./router.cjs",
  "module": "./router.js",
  "unpkg": "./router.js",
  "exports": {
    ".": {
      "import": "./router.js",
      "require": "./router.cjs"
    },
    "./*.js": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*.mjs": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*.cjs": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*": {
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8080
    }
  },
  "scripts": {
    "test": "npm run lint:js && npm run run:tests",
    "start": "http-server ${npm_package_config_serve_path} -c-1 --port ${npm_package_config_serve_port} --gzip true --brotli true -a ${npm_package_config_serve_domain} -o /test/",
    "preversion": "npm test && npm run build",
    "prepare": "npm test && npm run build",
    "lint:js": "eslint .",
    "fix:js": "eslint . --fix",
    "build": "npm run build:js",
    "run:tests": "node --test *.test.js",
    "clean": "rm -f ./*.cjs",
    "build:js": "npm run clean && rollup -c rollup.config.js",
    "create:lock": "npm i --package-lock-only --ignore-scripts --no-audit --no-fund",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch && npm run create:lock",
    "version:bump:minor": "npm version --no-git-tag-version minor && npm run create:lock",
    "version:bump:major": "npm version --no-git-tag-version major && npm run create:lock"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AegisJSProject/router.git"
  },
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "funding": [
    {
      "type": "librepay",
      "url": "https://liberapay.com/shgysk8zer0"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/shgysk8zer0"
    }
  ],
  "bugs": {
    "url": "https://github.com/AegisJSProject/router/issues"
  },
  "homepage": "https://github.com/AegisJSProject/router#readme",
  "devDependencies": {
    "@aegisjsproject/component": "^0.1.4",
    "@aegisjsproject/core": "^0.2.15",
    "@aegisjsproject/markdown": "^0.1.3",
    "@aegisjsproject/state": "^1.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@shgysk8zer0/eslint-config": "^1.0.1",
    "eslint": "^9.12.0",
    "http-server": "^14.1.1",
    "rollup": "^4.24.0"
  }
}
